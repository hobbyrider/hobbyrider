// Prisma schema for Hobbyrider
// Docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Prisma v7 connection URLs are configured via prisma.config.ts
}

model Software {
  id          String         @id @default(cuid())
  name        String
  tagline     String
  description String?        @db.Text
  url         String         @unique
  maker       String? // Keep for backward compatibility
  makerId     String?
  makerUser   User?          @relation("MadeProducts", fields: [makerId], references: [id], onDelete: SetNull)
  thumbnail   String?
  embedHtml   String?        @db.Text
  upvotes     Int            @default(0)
  viewCount   Int            @default(0)
  isHidden    Boolean        @default(false)
  createdAt   DateTime       @default(now())
  lastViewedAt DateTime?
  comments    Comment[]
  categories  Category[]
  images      ProductImage[]
  upvotedBy   Upvote[]
  reports     Report[]

  @@index([upvotes, createdAt])
  @@index([viewCount, createdAt])
  @@index([makerId])
  @@index([isHidden])
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  order     Int      @default(0)
  productId String
  product   Software @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId, order])
}

model Category {
  id          String     @id @default(cuid())
  name        String     @unique
  slug        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  products    Software[]

  @@index([slug])
}

model Comment {
  id         String   @id @default(cuid())
  content    String
  author     String // Keep for backward compatibility
  authorId   String?
  authorUser User?    @relation("Comments", fields: [authorId], references: [id], onDelete: SetNull)
  productId  String
  product    Software @relation(fields: [productId], references: [id], onDelete: Cascade)
  isHidden   Boolean  @default(false)
  createdAt  DateTime @default(now())
  reports    Report[]

  @@index([productId, createdAt])
  @@index([authorId])
  @@index([isHidden])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  username      String?   @unique
  image         String?
  password      String? // Hashed password for credentials provider
  headline      String? // Short tagline/bio line
  bio           String?   @db.Text // Full bio/description
  website       String? // Personal website URL
  linkedin      String? // LinkedIn profile URL
  twitter       String? // Twitter/X profile URL
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  madeProducts   Software[] @relation("MadeProducts")
  comments       Comment[]  @relation("Comments")
  upvotes        Upvote[]
  reportsMade    Report[]   @relation("ReportsMade")
  reportsReceived Report[]  @relation("ReportsReceived")
  followers      Follow[]   @relation("Followers")
  following      Follow[]   @relation("Following")

  @@index([email])
  @@index([username])
  @@index([isAdmin])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Upvote {
  id        String   @id @default(cuid())
  userId    String
  productId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Software @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([productId])
  @@index([userId])
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  follower    User     @relation("Following", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("Followers", fields: [followingId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model Report {
  id            String    @id @default(cuid())
  reporterId    String
  reporter      User      @relation("ReportsMade", fields: [reporterId], references: [id], onDelete: Cascade)
  productId     String?
  product       Software? @relation(fields: [productId], references: [id], onDelete: Cascade)
  commentId     String?
  comment       Comment?  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  reportedUserId String?
  reportedUser  User?     @relation("ReportsReceived", fields: [reportedUserId], references: [id], onDelete: Cascade)
  reason        String    @db.Text
  status        String    @default("pending") // pending, reviewed, dismissed, resolved
  isArchived    Boolean   @default(false)
  reviewedBy    String?
  reviewedAt    DateTime?
  createdAt     DateTime  @default(now())

  @@index([status])
  @@index([isArchived])
  @@index([productId])
  @@index([commentId])
  @@index([reportedUserId])
  @@index([reporterId])
  @@index([createdAt])
}
