// Prisma schema for Hobbyrider
// Docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Prisma v7 connection URLs are configured via prisma.config.ts
}

model Software {
  id        String    @id @default(cuid())
  name      String
  tagline   String
  url       String    @unique
  maker     String?   // Keep for backward compatibility
  makerId   String?
  makerUser User?     @relation("MadeProducts", fields: [makerId], references: [id], onDelete: SetNull)
  thumbnail String?
  upvotes   Int       @default(0)
  createdAt DateTime  @default(now())
  comments  Comment[]
  categories Category[]
  images    ProductImage[]

  @@index([upvotes, createdAt])
  @@index([makerId])
}

model ProductImage {
  id        String   @id @default(cuid())
  url       String
  order     Int      @default(0)
  productId String
  product   Software @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId, order])
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  description String?
  createdAt DateTime  @default(now())
  products  Software[]

  @@index([slug])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  author    String   // Keep for backward compatibility
  authorId  String?
  authorUser User?   @relation("Comments", fields: [authorId], references: [id], onDelete: SetNull)
  productId String
  product   Software @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId, createdAt])
  @@index([authorId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  username      String?   @unique
  image         String?
  password      String?   // Hashed password for credentials provider
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  madeProducts  Software[] @relation("MadeProducts")
  comments      Comment[]  @relation("Comments")

  @@index([email])
  @@index([username])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}